# 公共服务（Common Service）
# 游戏服务（Game Service）
# 用户界面服务（Frontend Service）
# 用户管理服务（User Service）
# 支付服务（Payment Service）
# 活动服务（Activity Service）
# 代理与推广服务（Affiliate Service）
# 风控服务（Risk Control Service）
# 分析与报表服务（Analytics Service）
# 客服服务（Customer Support Service）
COMMON_SERVICE=http://localhost:3000
GAME_SERVICE=http://localhost:3001
FRONTEND_SERVICE=http://localhost:3002
USER_SERVICE=http://localhost:3003
PAYMENT_SERVICE=http://localhost:3004
ACTIVITY_SERVICE=http://localhost:3005
AFFILIATE_SERVICE=http://localhost:3006
RISK_CONTROL_SERVICE=http://localhost:3007
ANALYTICS_SERVICE=http://localhost:3008
CUSTOMER_SUPPORT_SERVICE=http://localhost:3009

# 生产环境配置
NODE_ENV=development
PORT=3000

# API 基础URL
API_BASE_URL=http://localhost:3002

# 集群模式（true/false）
CLUSTER_MODE=false

# 数据库配置
DB_DIALECT=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASS=123456
DB_NAME=testSxx

# 数据库连接池配置
DB_POOL_MAX=20         # 最大连接数
DB_POOL_MIN=5          # 最小连接数
DB_POOL_ACQUIRE=30000  # 获取连接超时时间(毫秒)
DB_POOL_IDLE=10000     # 空闲连接超时时间(毫秒)
DB_POOL_EVICT=1000     # 空闲检查间隔时间(毫秒)
DB_POOL_MAX_USES=7500  # 单个连接最大使用次数，0表示无限制
DB_CONNECT_TIMEOUT=60000 # 连接超时时间(毫秒)
DB_RETRY_MAX=3         # 最大重试次数

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# 缓存TTL配置(秒)
CACHE_TTL_SHORT=300    # 短期缓存 - 5分钟
CACHE_TTL_MEDIUM=3600  # 中期缓存 - 1小时
CACHE_TTL_LONG=86400   # 长期缓存 - 1天

# JWT配置
JWT_SECRET=your_development_jwt_secret_key
JWT_EXPIRES_IN=1d 